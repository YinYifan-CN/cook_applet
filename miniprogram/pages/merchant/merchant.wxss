/* pages/merchant/merchant.wxss */

/* Tab切换 */
.tab-bar {
  display: flex;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff6b9d;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b9d 0%, #f093fb 100%);
  border-radius: 2rpx;
}

/* 统计区域 */
.stats-section {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.stat-card.pending {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx;
}

.order-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  flex: 1;
}

.order-id {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.order-user {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-confirmed {
  background: #e3f2fd;
  color: #2196f3;
}

.status-preparing {
  background: #f3e5f5;
  color: #9c27b0;
}

.status-ready {
  background: #e8f5e9;
  color: #4caf50;
}

.status-completed {
  background: #f5f5f5;
  color: #999;
}

.order-items {
  margin-bottom: 16rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
  line-height: 44rpx;
}

.item-price {
  color: #ff6b6b;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-bottom: 16rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-total {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  gap: 20rpx;
}

.btn-action {
  flex: 1;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 0;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
}

/* 菜品管理 */
.dish-header {
  padding: 20rpx;
  background: white;
}

.btn-add-dish {
  width: 100%;
  background: linear-gradient(135deg, #ff6b9d 0%, #f093fb 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.dish-list {
  padding: 20rpx;
}

.dish-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.dish-info {
  margin-bottom: 20rpx;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.dish-price {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
}

.dish-actions {
  display: flex;
  gap: 20rpx;
}

.btn-edit,
.btn-delete {
  flex: 1;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 26rpx;
}

.btn-edit {
  background: #f0f0f0;
  color: #333;
  border: none;
}

.btn-delete {
  background: #ffebee;
  color: #f44336;
  border: none;
}
