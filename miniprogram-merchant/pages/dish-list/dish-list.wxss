/* pages/dish-list/dish-list.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.add-button-section {
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.btn-add-dish {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.dish-list {
  padding: 0 30rpx;
}

.dish-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.dish-info {
  flex: 1;
  margin-right: 20rpx;
}

.dish-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.dish-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.dish-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b9d;
}

.dish-status {
  flex-shrink: 0;
}

.status-badge {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.status-badge.available {
  background: #4CAF50;
}

.status-badge.unavailable {
  background: #9E9E9E;
}

.dish-instructions {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #667eea;
}

.instructions-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 12rpx;
}

.instructions-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.dish-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  font-weight: bold;
}

.btn-toggle {
  background: #2196F3;
  color: white;
}

.btn-edit {
  background: #667eea;
  color: white;
}

.btn-delete {
  background: #f44336;
  color: white;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
