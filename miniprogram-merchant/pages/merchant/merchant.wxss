/* pages/merchant/merchant.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 统计卡片 */
.stats-section {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
}

.stat-pending {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stat-revenue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选栏 */
.filter-bar {
  white-space: nowrap;
  padding: 20rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.filter-btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border: 2rpx solid #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #667eea;
  background: white;
}

.filter-btn.active {
  background: #667eea;
  color: white;
}

/* 订单列表 */
.orders-list {
  padding: 0 30rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx dashed #eee;
}

.order-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.order-meta {
  font-size: 24rpx;
  color: #999;
}

.order-meta text {
  margin-right: 20rpx;
}

.order-status {
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.order-items {
  margin-bottom: 24rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #555;
}

.item-name {
  flex: 1;
  font-weight: 500;
}

.item-quantity {
  color: #667eea;
  font-weight: bold;
  margin: 0 20rpx;
}

.item-price {
  color: #ff6b9d;
}

.order-note {
  background: #fffbea;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
  color: #666;
  border-left: 6rpx solid #ffc107;
}

.order-total {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b9d;
  text-align: right;
  margin-bottom: 24rpx;
}

.order-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-accept {
  background: #4CAF50;
  color: white;
}

.btn-cancel {
  background: #9E9E9E;
  color: white;
}

.btn-start {
  background: #2196F3;
  color: white;
}

.btn-complete {
  background: #FF9800;
  color: white;
}

.btn-detail {
  background: #667eea;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
