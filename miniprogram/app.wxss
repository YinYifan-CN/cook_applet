/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #f093fb 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-weight: bold;
}

.btn-success {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-weight: bold;
}

.btn-warning {
  background: #ff9800;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-weight: bold;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
}
