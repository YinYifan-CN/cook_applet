/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  font-weight: bold;
}

.btn-success {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 10rpx;
}

.btn-danger {
  background: #f44336;
  color: white;
  border: none;
  border-radius: 10rpx;
}

.btn-warning {
  background: #FF9800;
  color: white;
  border: none;
  border-radius: 10rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-state-text {
  font-size: 28rpx;
}

/* 加载提示 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}
