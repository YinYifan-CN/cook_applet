/* pages/order/order.wxss */

/* 筛选栏 */
.filter-bar {
  background: white;
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #ff6b9d 0%, #f093fb 100%);
  color: white;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx;
}

.order-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 进度条 */
.order-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff6b9d 0%, #f093fb 100%);
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-confirmed {
  background: #e3f2fd;
  color: #2196f3;
}

.status-preparing {
  background: #f3e5f5;
  color: #9c27b0;
}

.status-ready {
  background: #e8f5e9;
  color: #4caf50;
}

.status-completed {
  background: #f5f5f5;
  color: #999;
}

.status-cancelled {
  background: #ffebee;
  color: #f44336;
}

.order-items {
  margin-bottom: 16rpx;
}

.order-item {
  font-size: 26rpx;
  color: #333;
  line-height: 44rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-total {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b9d;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 0;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
}
